
<!DOCTYPE html>
<html>
<head>
  <title>Bookatable</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  
  <div class='login'>
     <% if current_user %>
       <%= link_to current_user.username, user_path(current_user)  %>
       <%= link_to "Log out", destroy_user_session_path, method: :delete %>
       
       <% if current_user.try(:restaurateur) %>
         <%= link_to 'List my restaurant', new_restaurant_path %>
       <% end %>

       <% if current_user.restaurateur.nil? %>
       <%= link_to 'Become a Restaurateur', new_restaurateur_path  %>
       <% end %>

     <% else %>
       <%= link_to "Sign In", new_user_session_path %>
       <%= link_to "Register", new_user_registration_path %>
     <% end %>
     <%= link_to 'Browse by Category', categories_path  %>
     <%= link_to 'All Restaurants', restaurants_path  %>
   </div>

<%= yield %>


</body>
</html>