<p id="notice"><%= notice %></p>

<p>
  <strong>Chef</strong>
  <%= @user.username %>
</p>

<div id="image">
<%= link_to image_tag(@user.user_image.thumb.url), @user.user_image.detail.url%>
</div>

<% if can? :manage, User %>
  <%= link_to 'Edit', edit_user_path(@user) %> 
<% end %>




<% if @user.restaurateur %>
  <table class = "table-minimal">
    <thead>
      <tr>
        <th> <%= @user.username %>'s Restaurants</th>
      </tr>
    </thead>
  
    <tbody>
      <% @restaurants.each do |restaurant| %>
      <tr>
        <td> <%= link_to restaurant.name, restaurant_path(restaurant)  %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if can? :read, Booking %>
  <% if @user.bookings.exists? %>
    <table class = "table-minimal">
      <h3>My Bookings</h3>
      <thead>
        <tr>
          <th>Restaurant</th>
          <th>Party Size</th>
          <th>Start Time</th>
          <th>Status</th>
        </tr>
      </thead>
    
      <tbody>
        <% @user.bookings.each do |booking| %>
        <tr>
          <td> <%= link_to booking.restaurant.name, booking_path(booking) %></td>
          <td> <%= booking.party %> </td>
          <td> <%= booking.starttime %> </td>
          <td> <%= booking.status %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>

  





