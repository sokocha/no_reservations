<p id="notice"><%= notice %></p>

<h1>Listing Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Restaurant</th>
      <th>Date</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th>Party</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.description %></td>
        <td><%= booking.restaurant_id %></td>
        <td><%= booking.date %></td>
        <td><%= booking.starttime %></td>
        <td><%= booking.endtime %></td>
        <td><%= booking.party %></td>
        <td><%= booking.status %></td>
        <% if can? :manage, Booking %>
          <td><%= link_to 'Show', booking %></td>
          <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
          <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

